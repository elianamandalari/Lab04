                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtMatricola" prefHeight="27.0" prefWidth="102.0">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="btnCercaNome" mnemonicParsing="false" onAction="#doCercaNome" />
